/* ===== ETHOS-7 AIO: PS5-INSPIRED THEME ===== */
/* styles/ps5-theme.css */

:root {
  /* PS5-Inspired Color Palette - Deep blues with cyan/purple accents */
  --ps5-deep-blue: #0d1730;
  --ps5-card-blue: #1a2a4a;
  --ps5-accent-cyan: #00a2ff;
  --ps5-accent-purple: #8a2be2;
  --ps5-white: #ffffff;
  --ps5-light-gray: #e0e0e0;
  --ps5-dark-gray: #2d2d2d;

  /* Typography - Clean, modern sans-serif similar to PS5 */
  --ps5-font-primary: 'Segoe UI', 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
  --ps5-font-weight-light: 300;
  --ps5-font-weight-regular: 400;
  --ps5-font-weight-bold: 600;

  /* Effects and Transitions */
  --ps5-border-radius: 12px;
  --ps5-card-shadow: 0 4px 12px rgba(0, 0, 0, 0.15);
  --ps5-glow-effect: 0 0 8px rgba(0, 162, 255, 0.4);
  --ps5-transition-fast: all 0.2s ease;
  --ps5-transition-slow: all 0.4s ease;
}

/* Main Container with PS5-inspired Layout */
.ps5-theme {
  background: linear-gradient(135deg, var(--ps5-deep-blue) 0%, #151a30 100%);
  color: var(--ps5-white);
  font-family: var(--ps5-font-primary);
  min-height: 100vh;
}

/* Card System - Mimicking PS5 Game Tiles */
.ethos-card {
  background: var(--ps5-card-blue);
  border-radius: var(--ps5-border-radius);
  box-shadow: var(--ps5-card-shadow);
  padding: 1.5rem;
  margin: 1rem 0;
  transition: var(--ps5-transition-fast);
  border: 1px solid rgba(255, 255, 255, 0.05);
}

.ethos-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--ps5-card-shadow), var(--ps5-glow-effect);
  border-color: rgba(0, 162, 255, 0.3);
}

/* Navigation & Control Elements */
.ps5-nav {
  display: flex;
  align-items: center;
  padding: 1rem 2rem;
  background: rgba(13, 23, 48, 0.9);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.ps5-nav-item {
  padding: 0.75rem 1.5rem;
  margin: 0 0.5rem;
  border-radius: var(--ps5-border-radius);
  cursor: pointer;
  transition: var(--ps5-transition-fast);
  font-weight: var(--ps5-font-weight-regular);
}

.ps5-nav-item.active {
  background: var(--ps5-accent-cyan);
  color: var(--ps5-deep-blue);
  font-weight: var(--ps5-font-weight-bold);
}

/* Status Indicators */
.status-indicator {
  display: inline-flex;
  align-items: center;
  padding: 0.5rem 1rem;
  background: rgba(255, 255, 255, 0.1);
