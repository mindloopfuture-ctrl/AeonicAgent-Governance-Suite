  border-radius: var(--ps5-border-radius);
  position: relative;
  overflow: hidden;
}

.holographic-element::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent, 
    rgba(255, 255, 255, 0.1), 
    transparent);
  transition: var(--ps5-transition-slow);
}

.holographic-element:hover::after {
  left: 100%;
}

/* Animations */
@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

@keyframes slideInFromTop {
  from { 
    opacity: 0;
    transform: translateY(-20px);
  }
  to { 
    opacity: 1;
    transform: translateY(0);
  }
}

.ps5-page-transition {
  animation: slideInFromTop 0.4s ease-out;
}

