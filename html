<textarea id="in" placeholder="Describe una acción o decisión..."></textarea><br>
<button id="send">Enviar</button>
<pre id="out">Esperando interacción...</pre>
<script>
document.getElementById("send").onclick = async ()=>{
  const val=document.getElementById("in").value;
  const r=await fetch("/api/ethos",{method:"POST",headers:{"Content-Type":"application/json"},body:JSON.stringify({input:val})});
  const j=await r.json(); document.getElementById("out").textContent=JSON.stringify(j,null,2);
}
</script>
